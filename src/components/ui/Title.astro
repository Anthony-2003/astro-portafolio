---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style>
  .section-title {
    position: relative;
    display: inline-block;
    padding-left: 1rem; /* espacio para la raya */
  }

  .section-title::before {
    content: "";
    position: absolute;
    width: 3rem;
    height: 5px;
    background-color: #ec4899;
    bottom: -1rem;
    border-radius: 20px;
  }
</style>

<h2
  class="section-title text-white text-3xl font-bold leading-none w-full text-center mb-10"
>
  {title}
</h2>
