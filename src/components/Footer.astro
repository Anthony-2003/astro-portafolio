---
import useTranslations from "@utils/i18n";

const t = useTranslations(Astro.currentLocale || "es");
---

<footer class="relative mt-60">
  <div class="absolute inset-x-0 -top-20 h-20">
    <div class="wave wave1"></div>
    <div class="wave wave2"></div>
    <div class="wave wave3"></div>
    <div class="wave wave4"></div>
  </div>

  <!-- Main -->
  <section
    class="footer-main flex items-center flex-col gap-8 min-h-[200px] md:flex-row md:justify-between md:px-5 bg-white"
  >
    <!-- Logo -->
    <div class="flex flex-wrap items-center gap-5 px-2">
      <div class="flex flex-col gap-1 max-w-[280px]">
        <span class="text-3xl font-bold text-transparent title"
          >Anthony Volquez</span
        >
        <span class="font-bold text-2xl">FullStack Developer</span>
      </div>
    </div>

    <!-- Nav -->
    <div class="flex flex-col items-center py-5 md:items-start">
      <div class="flex">
        <a
          class="footer-btn"
          href={Astro.currentLocale == "en"
            ? "https://www.linkedin.com/in/anthony-volquez/?locale=en_US"
            : "https://www.linkedin.com/in/anthony-volquez"}
          target="_blank">LinkedIn</a
        >
        <a
          class="footer-btn"
          href="https://github.com/Anthony-2003"
          target="_blank">Github</a
        >
        <a class="footer-btn" href="mailto:anthony1volquez@gmail.com">Email</a>
      </div>
    </div>
  </section>
</footer>


