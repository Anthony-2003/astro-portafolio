---
import useTranslations from "@utils/i18n";
import { Icon } from "astro-icon/components";

const t = useTranslations(Astro.currentLocale || "es");
---

<footer class="relative mt-60 bg-white">
  <!-- Waves -->
  <div class="absolute inset-x-0 -top-20 h-20 overflow-hidden">
    <div class="wave wave1"></div>
    <div class="wave wave2"></div>
    <div class="wave wave3"></div>
    <div class="wave wave4"></div>
  </div>

  <!-- Main -->
  <section
    class="footer-main flex flex-col gap-12 px-6 py-12
           md:flex-row md:items-start md:justify-between max-w-6xl mx-auto"
  >
    <!-- Brand -->
    <div class="flex flex-col gap-3 text-center w-full md:max-w-sm md:text-left">
      <span class="text-3xl font-bold text-transparent title">
        Anthony Volquez
      </span>
      <span class="text-xl font-semibold text-neutral-800">
        FullStack Developer
      </span>

      <p class="text-sm text-neutral-600 leading-relaxed">
        {t("footer.description")}
      </p>

      <span class="text-xs uppercase tracking-wider text-neutral-500">
        Astro · React · Next · Node · Tailwind · SQL
      </span>
    </div>

    <!-- Contact / CTA -->
    <div class="flex flex-col gap-4">
      <span class="font-semibold text-neutral-800 text-center"> {t("footer.title")} </span>

      <!-- Social -->
      <div class="flex gap-4 mt-2 justify-center">
        <a
          class="footer-btn"
          href={Astro.currentLocale === "en"
            ? "https://www.linkedin.com/in/anthony-volquez/?locale=en_US"
            : "https://www.linkedin.com/in/anthony-volquez"}
          target="_blank"
          aria-label="LinkedIn"
        >
          <Icon name="linkedin-black" size={26} />
        </a>

        <a
          class="footer-btn"
          href="https://github.com/Anthony-2003"
          target="_blank"
          aria-label="GitHub"
        >
          <Icon name="github-black" size={26} />
        </a>

        <a
          class="footer-btn"
          href="mailto:anthony1volquez@gmail.com"
          aria-label="Email"
          target="_blank"
        >
          <Icon name="google-black" size={26} />
        </a>
      </div>
    </div>
  </section>

  <!-- Bottom -->
  <div
    class="border-t border-neutral-200 py-4 text-center text-xs text-neutral-500 px-5"
  >
    © {new Date().getFullYear()} Anthony Volquez · {t("footer.subtitle")}
  </div>
</footer>
